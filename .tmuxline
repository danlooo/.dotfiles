# This tmux statusbar config was created by tmuxline.vim
# on Sa, 13 Jun 2020

set -g status-justify "centre"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=,bg=#5c6370"
set -g status-right-style "none"
set -g pane-active-border-style "fg=#2c323c"
set -g status-style "none,bg=#2c323c"
set -g message-style "fg=,bg=#5c6370"
set -g pane-border-style "fg=#5c6370"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "underscore,fg=#abb2bf,bg=#2c323c"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=#abb2bf,bg=#2c323c"
set -g status-left "#[fg=#abb2bf,bg=#2c323c] #S #[fg=#2c323c,bg=#2c323c,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=#2c323c,bg=#2c323c,nobold,nounderscore,noitalics]#[fg=#2c323c,bg=#2c323c,nobold,nounderscore,noitalics]#[fg=#abb2bf,bg=#2c323c] #(cd #{pane_current_path}; git rev-parse --abbrev-ref HEAD)  #{s|/home/$USER|~|:pane_current_path}  #H "
setw -g window-status-format "#[fg=#2c323c,bg=#2c323c,nobold,nounderscore,noitalics]#[default] #I  #W #[fg=#2c323c,bg=#2c323c,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=#2c323c,bg=#5c6370,nobold,nounderscore,noitalics]#[fg=,bg=#5c6370] #I  #W  #F #[fg=#5c6370,bg=#2c323c,nobold,nounderscore,noitalics]"
